{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "g++.exe build and debug active file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": true, // External console for better handling
      "MIMode": "gdb",
      "miDebuggerPath": "C:/MinGW/bin/gdb.exe", // Make sure gdb.exe is here
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "g++.exe build active file",
      "internalConsoleOptions": "neverOpen",
      "console": "externalTerminal", // Use external terminal for stability
      "launchCompleteCommand": "exec-run",
      "logging": {
        "engineLogging": true
      }
    }
  ]
}
